{
  "clearMocks": true,
  "collectCoverage": true,
  "coverageDirectory": "coverage",
  "coverageProvider": "v8",
  "preset": "ts-jest",
  "testEnvironment": "node",
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
  "transform": {
    "^.+\\.(ts|'tsx)$'": "ts-jest"
  },
  "testMatch": ["**/tests/**/*.(test|spec).(ts|tsx|js)"],
  "globals": {
    "ts-jest": {
      "tsconfig": "tsconfig.json"
    }
  }
}